
<article>
	<div class="title">
		<%= link_to post.title, post_path(post) %> 
		<div class="pull-right">


			<% if admin_signed_in? %>
				<% if post.published %>
					<span><%= link_to unpublish_post_path(post) do %><i class=" icon-eye-close"></i><% end %></span>&nbsp;
				<% else %>
					<span><%= link_to publish_post_path(post) do %><i class=" icon-eye-open"></i><% end %></span>&nbsp;
				<% end %>

				<span><%= link_to edit_post_path(post) do %><i class="icon-pencil"></i><% end %></span>&nbsp;
				<span><%= link_to post_path(post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %><i class="icon-trash"></i><% end %></span>
			<% end %>
		</div>
	</div>
	<p><%= raw Truncato.truncate(post.content, :max_length => 400) %></p>
	
<!--
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(post), :class => 'btn btn-mini' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(post),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' %>
-->
</article>
tags: <%= raw post.tag_list.map {|t| link_to t, tag_path(t) }.join(', ') %>
<hr />